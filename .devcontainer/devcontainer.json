{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"postCreateCommand": "curl -sSf https://rye-up.com/get | bash && echo 'source $HOME/.rye/env' >> ~/.bashrc",
	"postAttachCommand": "/home/vscode/.rye/shims/rye sync",
    "containerEnv": {
        "RYE_INSTALL_OPTION": "--yes"
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"github.vscode-github-actions",
				"tamasfe.even-better-toml"
			]
		}
	}
}

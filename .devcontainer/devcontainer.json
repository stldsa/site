{
  "name": "STL DSA",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers-contrib/features/pdm:2": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
    "ghcr.io/audacioustux/devcontainers/bun:1": {},
    "ghcr.io/devcontainers-contrib/features/heroku-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/act:1": {},
    "ghcr.io/schlich/cst-devcontainer-feature/container-structure-test:1": {}
  },
  "postCreateCommand": "pdm install && pdm run python manage.py migrate && pdm run python manage.py loaddata users.json home_page.json events.json && pre-commit install",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "python.defaultInterpreterPath": ".venv/bin/python",
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
          },
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "files.insertFinalNewline": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "eamodio.gitlens",
        "GitHub.copilot",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "GitHub.vscode-github-actions",
        "ms-toolsai.jupyter",
        "samuelcolvin.jinjahtml"
      ]
    }
  }
}

{
  "name": "STL DSA",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers-contrib/features/poetry:2": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-contrib/features/act:1": {},
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
    "ghcr.io/schlich/cst-devcontainer-feature/container-structure-test:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "GitHub.copilot",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "GitHub.vscode-github-actions"
      ]
    }
  },
  "postCreateCommand": "poetry install && poetry run python manage.py migrate && poetry run python manage.py seed-db && pre-commit install --install-hooks && npm install && npx cypress install",
  "forwardPorts": [6080, 5901]
}